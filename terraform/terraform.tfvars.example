# AWS Region
aws_region = "ap-northeast-2"

# Project Information
project_name = "lovekeeper"
environment  = "dev-prod"

# VPC and Subnets
vpc_cidr             = "10.0.0.0/16"
public_subnet_1_cidr = "10.0.1.0/24"
public_subnet_2_cidr = "10.0.2.0/24"
private_subnet_1_cidr = "10.0.3.0/24"
private_subnet_2_cidr = "10.0.4.0/24"
availability_zones   = ["ap-northeast-2a", "ap-northeast-2c"]

# EC2 Key Pair
key_name = "lovekeeper-key"

# Container Configuration
container_port = 8080

# ECS Dev Configuration
ecs_task_cpu_dev    = 512
ecs_task_memory_dev = 1024
ecs_task_count_dev  = 1

# ECS Prod Configuration
ecs_task_cpu_prod    = 1024
ecs_task_memory_prod = 2048
ecs_task_count_prod  = 2

# RDS Dev Configuration
db_instance_class_dev    = "db.t3.small"
db_allocated_storage_dev = 20
db_username_dev          = "admin"
db_password_dev          = "change-me"

# RDS Prod Configuration
db_instance_class_prod    = "db.t3.medium"
db_allocated_storage_prod = 50
db_username_prod          = "admin"
db_password_prod          = "change-me"

# Redis Configuration
redis_node_type_dev  = "cache.t3.small"
redis_node_type_prod = "cache.t3.medium"
redis_port           = 6379

# Secret Variables
jwt_secret     = "change-me"
aws_access_key = "change-me"
aws_secret_key = "change-me"
aws_s3_bucket  = "lovekeeper-storage"
mail_username  = "change-me"
mail_password  = "change-me"